{
  "manifest_version": 2,
  "name": "Twitter Llinks",
  "author": "James Knight",
  "version": "0.1",
  "description": "Search Twitter for tweets linking to this current page, drawn from https://github.com/round/Twitter-Links-beta for Chrome",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "contextMenus", "tabs"],

  "browser_action": {
    "browser_style": true,
    "default_title": "Twitter links to this page\u2026",
    "default_icon": {
      "48": "icons/icon64.png"
    }
  }
}
